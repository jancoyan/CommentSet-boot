{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "逛逛"
			}
		},
		{
			"path": "pages/home/home",
			"style": {
				"navigationBarTitleText": "我的"
			}
		}
	    ,{
            "path" : "pages/login/login",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "登录",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/add/add",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "写随笔",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/home/settings",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "设置",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/home/userPost",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "我发表的",
                "enablePullDownRefresh": false,
				"onReachBottomDistance": 50
            }
            
        }
        ,{
            "path" : "pages/login/register",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "注册",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/home/user-info",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "详细信息",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/home/favlist",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "收藏夹",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#5098ff",
		"borderStyle": "white",
		"backgroundColor": "#F8F8F8",
		"list": [
			{
				"pagePath": "pages/index/index",
				"iconPath": "static/icon/home.png",
				"selectedIconPath": "static/icon/home-active.png",
				"text": "逛逛"
			},
			{
				"pagePath": "pages/add/add",
				"iconPath": "static/icon/add.png",
				"selectedIconPath": "static/icon/add-active.png",
				"text": "发布"
			},
			{
				"pagePath": "pages/home/home",
				"iconPath": "static/icon/member.png",
				"selectedIconPath": "static/icon/member-active.png",
				"text": "我的"
			}
		]
	}
}
